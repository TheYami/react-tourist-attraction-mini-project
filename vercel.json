{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",    
        "use": "@vercel/static-build"
      },
      {
        "src": "server/app.js",         
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",                  
        "dest": "/client/$1"
      },
      {
        "src": "/app/(.*)",         
        "dest": "/server/$1.js"
      }
    ]
  }
  